resource "local_file" "outputs" {
  filename = "${path.module}/outputs.json"
  content = jsonencode({
    comments = "DO NOT MODIFY THIS FILE MANUALLY. IT IS AUTOGENERATED ON SUCCESSFUL TERRAFORM APPLY. MAKE ANY NECESSARY CHANGES IN localfile.tf"
    outputs = {
      ck_aws_current_region = {
        value = "${data.aws_region.current.name}"
      },
      # AppSync
      ck_appsync_graphql_api_region = {
        value = "${data.aws_region.current.name}"
      },
      ck_appsync_graphql_api_id = {
        value = "${aws_appsync_graphql_api.ck_appsync_graphql_api.id}"
      },
      ck_appsync_graphql_api_uris = {
        value = {
          GRAPHQL  = "${aws_appsync_graphql_api.ck_appsync_graphql_api.uris.GRAPHQL}",
          REALTIME = "${aws_appsync_graphql_api.ck_appsync_graphql_api.uris.REALTIME}"
        }
      },
      # Cognito
      ck_user_pool_region = {
        value = "${data.aws_region.current.name}"
      },
      ck_user_pool_id = {
        value = "${aws_cognito_user_pool.ck_user_pool.id}"
      },
      ck_user_pool_client_id = {
        value = "${aws_cognito_user_pool_client.ck_user_pool_client.id}"
      },
      ck_identity_pool_id = {
        value = "${aws_cognito_identity_pool.ck_identity_pool.id}"
      },
      # S3
      ck_landing_bucket = {
        value = "${aws_s3_bucket.ck_landing_bucket.id}"
      },
      ck_input_bucket = {
        value = "${aws_s3_bucket.ck_input_bucket.id}"
      },
      ck_output_bucket = {
        value = "${aws_s3_bucket.ck_output_bucket.id}"
      },
      ck_app_storage_bucket = {
        value = "${aws_s3_bucket.ck_app_storage_bucket.id}"
      },

    }
  })

